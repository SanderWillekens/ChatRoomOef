@model IEnumerable<ChatRoomOef.Models.ChatroomListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.ActionLink("Open Chatroom", "OpenChatroom", new { item.Id }) |
                @Html.ActionLink("Leave Chatroom", "LeaveChatroom", new { item.Id }) |
                <a asp-action="Delete" asp-route-id="@item.Id"
                   onclick="return confirm('Are you sure you want to delete this chatroom?')">Delete chatroom</a>
            </td>
        </tr>
}
    </tbody>
</table>
